<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PrimaryColor"
    android:elevation="4dp"
    android:title=""
    android:theme="@style/ThemeOverlay.AppCompat">

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:dropDownSelector="@color/PrimaryColor"
        android:textAlignment="center"
        android:entries="@array/spin_category"
        android:singleLine="true"
        android:spinnerMode="dropdown"></Spinner>

    <TextView
        android:id="@+id/in_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:singleLine="true"
        android:text="in"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/spinner_miles"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:dropDownSelector="@color/PrimaryColor"
        android:textAlignment="center"
        android:entries="@array/select_miles"
        android:singleLine="true"
        android:spinnerMode="dropdown"></Spinner>

    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:singleLine="true"
        android:text="Miles"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <ProgressBar android:id="@+id/search_progress" style="?android:attr/progressBarStyleSmall"
        android:layout_width="40dp" android:layout_height="40dp"
        android:layout_gravity="center" android:background="@android:color/transparent"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />

</android.support.v7.widget.Toolbar><!-- From: file:/C:/Nidhish/Working_Proj/RentApp/RentalApp/app/src/main/res/layout/toolbar_layout.xml -->